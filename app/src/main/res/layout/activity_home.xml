<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_thema"
    tools:context=".Home">

    <ImageView
        android:id="@+id/logo_app"
        android:transitionName="logo_appT"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/logo"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="22dp"
        android:id="@+id/contenedor_botones_inicio"
        android:visibility="invisible"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

       >

        <Button
            android:id="@+id/bton_play"
            android:onClick="botonesInicio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="play"
            android:textStyle="bold"
            android:background="@drawable/fondo_verde_inicio"/>
        <Button
            android:id="@+id/bton_scores"
            android:onClick="botonesInicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scores"
            android:textStyle="bold"


            android:background="@color/azul"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal">

        <Button
            android:id="@+id/bton_setting"
            android:onClick="botonesInicio"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="setting"

            android:textStyle="bold"

            android:background="@color/rojo"/>
        <Button
            android:id="@+id/bton_XX"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/fondo_amarillo_inicio"/>

    </LinearLayout>
    </LinearLayout>










</LinearLayout>